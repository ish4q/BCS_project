class bsc_Message {
private String bsc_Sender;
private String bsc_Reciever;  
private String bsc_Info;

public setValues(String s, String r, String i) {        //changed Message to setValues to reduce confusion
bsc_Sender = s;
bsc_Reciever = r;        
bsc_Info = i;
}

public getValues() {
System.out.println("Message sent from: " + bsc_Sender);
System.out.println("Message will be recieved by: " + bsc_Reciever);
System.out.println("The message content: " + bsc_Info);
}
}

class main {
public static void main(String[] args) {
Message display=new Message();                    //changed object name to display to improve the format

display.setValues("Ishaq", "Sulaiman", "Hello, my name is Ishaq.");   //changed Message to setValues 
display.getValues(); 

}
}
